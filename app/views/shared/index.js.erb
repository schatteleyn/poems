<% unless @poems.empty? %>
  $('tbody#poems').html('<%= escape_javascript render(@poems) %>');
  $('#paginator_poem').html('<%= escape_javascript(paginate(@poems, :param_name => :page_poems,:remote => true).to_s) %>');
<% end %>

