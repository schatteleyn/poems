<h1>Listing authors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="authors">
    <% @authors.each do |author| %>
      <tr>
	<td><%= author.name %></td>
        <td><%= link_to "Show author's text", author %></td>
      </tr>
    <% end %>
  </tbody>
</table>
