<h1>Listing short_stories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="short_stories">
    <%= render @short_stories %>
  </tbody>
  <div id="paginator_short_story">
    <%= paginate @short_stories, :param_name => :page_stories, :remote => true %>
  </div>
</table>
